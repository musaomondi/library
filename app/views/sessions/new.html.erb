<div class="row medium-4 columns medium-offset-4" id="form" align="center">
    <% provide(:title, "Log in") %>
    <h1>Log in</h1>
    <div class="callout">
        <%= form_for(:session, url: login_path) do |f| %>

            <%= f.text_field :name, placeholder: "Enter name" %> 
            <%= f.password_field :password, placeholder: "Enter password"%>
            <%= link_to "(Forgot password)", new_password_reset_path %>
            <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Remember me on this computer</span>
            <% end %>
            <%= f.submit "Log in" %>

        <% end %>
    </div>
    <p> New user? <%= link_to "Register here!", new_user_path %></p>
</div>
