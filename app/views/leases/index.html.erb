<% provide(:title, 'Books requested') %>
<div class="row">
    <div class="medium-6 columns ">
        <h1>Books Requested</h1>
        <table>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>User Name</th>
                <th>User Email</th>
                <th></th>
            </tr>

            <% @requests.each do |accept|%>
                <tr>
                    <td><%= accept.book.author %></td>
                    <td><%= accept.book.title %></td>
                    <td><%= accept.book.isbn %></td>
                    <td><%= accept.user.name %></td>
                    <td><%= accept.user.email %></td>     
                    <td> <%= link_to "Accept", accept_path(book_id: accept.id, status: "borrowed"), class: "button"%>
            </tr>
        <% end %>
        </table>

        <br />
        <%= link_to 'Back', books_path %>
    </div>

    <div class="medium-6 columns" >
        <h1>Books Borrowed</h1>
        <table>
            <tr>
                <th>Author</th>
                <th>Title</th>
                <th>ISBN</th>
                <th>User Name</th>
                <th>User Email</th>
                <th></th>
            </tr>

            <% @accepts.each do |lease|%>
                <tr>
                    <td><%= lease.book.author %></td>
                    <td><%= lease.book.title %></td>
                    <td><%= lease.book.isbn %></td>
                    <td><%= lease.user.name %></td>
                    <td><%= lease.user.email %></td>     
                    <td> <%= link_to "Return",lease , method: :delete, data: {confirm: "You want to return?"}, class: "button"%>
                </tr>
            <% end %>
        </table>
    </div>
</div>

