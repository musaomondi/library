<% provide(:title, 'All books') %>
<div class="medium-8 columns medium-offset-2">
    <h4>Available books</h4>
    <div class="row">
        <div class="medium-6 columns">
            <%= render 'books/search' %>
        </div>
        <div class="medium-4 columns">
            <% if current_user.admin? %>
                <h5><%= link_to 'New book', new_book_path%></h5>
                <h5><%= link_to 'Books Requested', leases_path %>
            <% end %>
        </div>
    </div>
    <table border=1>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Available copies</th>
            <% if current_user.admin? %>
                <th></th>
                <th></th>
            <% end %>
        </tr>
        <%= render @books %>
    </table>
</div>
