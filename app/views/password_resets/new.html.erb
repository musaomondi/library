<div class="medium-6 columns medium-offset-3">
    <% provide(:title, "Forgot password") %>
    <h1>Forgot password</h1>
    <div class="callout">
        <%= form_for(:password_reset, url: password_resets_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            <%= f.submit "Submit" %>
        <% end %>
    </div>
</div>

