<div class="row medium-4 columns medium-offset-4" id="form" align="center">
    <% provide(:title, 'Register')%>
    <h1>Register</h1>
    <div class="callout">
        <%= form_for(@user) do |f| %>
            <%= render 'shared/error_messages'%>
            <%= f.text_field :name, placeholder: "Enter name" %><br>
            <%= f.email_field :email, placeholder: "Enter email" %><br>
            <%= f.password_field :password, placeholder: "Enter password"%><br>
            <%= f.password_field :password_confirmation, placeholder: "confirm password"%><br>
            <%# <%= recaptcha_tags %1> %>
            <%= f.submit "Register", class: "button" %><br>

        <% end %>
    </div>
    Already have an account <%= link_to "login", login_path %>
</div>

