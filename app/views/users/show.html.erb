<% provide(:title, @user.name) %>
<div class= "row">
    <div class="medium-2 columns">
        <%= render 'users/profile' %>
        <% if !current_user.admin? %>
        <%= render 'users/stat' %>
        <% end %>
    </div>
    <div class="medium-8 columns">
        <h1>Listing books</h1>
        <table border=1>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>Available copies</th>
            </tr>
            <%= render @books %>
        </table>
    </div>
    <div >
    </div>
</div>

