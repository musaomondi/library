<div class="top-bar" id="example-menu">
    <div class="top-bar-image" >
        <%= link_to image_tag("msu_banner2.png",alt:"Maseno logo")%>
    </div>
    <div class="top-bar-right">
        <ul class="dropdown menu" data-dropdown-menu>
            <li><%= link_to fa_icon('home', text: "Home"), root_path %></li>
            <li><%= link_to fa_icon('info-circle', text: "About"), about_path %></li>
            <li><%= link_to  fa_icon('phone', text: "Contact"), contact_path %></li>
            <li><%= link_to fa_icon('hand-paper-o', text: "Help"), help_path %></li>
            <% if logged_in? %>
                <% if current_user.admin? %>
                    <li> <%= link_to fa_icon('users', text: "users"), users_path %></li>
                <% end %>
                <li><%= link_to fa_icon('user', text: "Profile"), current_user %></li>
                <li><%= link_to fa_icon('power-off', text: "logout"), logout_path, method: "delete" %></li>
            <% else %>
                <li><%= link_to fa_icon('sign-in', text: "Login"), login_path %></li>
            <% end %>
        </ul>

    </div>
</div>
