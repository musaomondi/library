<!DOCTYPE html>
<html>
    <head>
        <title><%= yield(:title) %> | Maseno university Library </title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <%= render 'layouts/header' %>
        <div class="container">
            <% flash.each do |message_type, message| %>
                <div id="message" class="callout small<%=message_type %>"><%=message %></div>
            <% end %>
        </div>
        <div>
            <%= yield %>
        </div>
    </body>
</html>
